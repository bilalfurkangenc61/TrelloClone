        margin-bottom: 0.5rem;
    }

    .stat-item {
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.8);
        font-weight: 500;
    }

    .team-badge {
        font-size: 0.7rem;
        background: rgba(255, 255, 255, 0.2);
        padding: 0.25rem 0.5rem;
        border-radius: 12px;
        color: white;
        font-weight: 600;
    }

    .board-footer {
        margin-top: 0.5rem;
    }

    .last-activity {
        font-size: 0.7rem;
        color: rgba(255, 255, 255, 0.7);
    }

    /* Sprint Badge */
