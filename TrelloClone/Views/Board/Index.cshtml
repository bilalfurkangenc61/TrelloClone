        position: relative;
    }

    .board-content {
        padding: 1.5rem;
        height: 100%;
        display: flex;
        flex-direction: column;
        position: relative;
        z-index: 2;
    }

    .board-title {
        font-size: 1.1rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        color: white;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    }

    .board-description {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.9);
        margin-bottom: 1rem;
