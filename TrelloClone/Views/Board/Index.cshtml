    }
    .overlay-content {
        text-align: center;
        color: white;
        transform: translateY(10px);
        transition: transform 0.3s ease;
    }
    .board-card:hover .overlay-content {
        transform: translateY(0);
    }

    /* Pano Menüsü */
    .board-menu {
        position: absolute;
        top: 1rem;
        right: 1rem;
        z-index: 4;
    }
    .btn-menu {
        background: rgba(255, 255, 255, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
        width: 32px;
        height: 32px; 
        border-radius: 50%;
